# TMDB Configuration
TMDB_API_KEY=your_api_key_from_themoviedb.org

# Node Environment
NODE_ENV=production

# Logging
LOG_LEVEL=info

# System
MAX_ACCOUNTS=10
HEALTH_CHECK_PORT=8080
# Number of alternative ports to try if HEALTH_CHECK_PORT is in use (default: 5)
HEALTH_CHECK_PORT_RETRIES=5
TEMP_STORAGE_PATH=./temp_storage
LOGS_PATH=./logs
SESSIONS_PATH=./sessions

# Feature Flags (optional)
ENABLE_MOVIE_BOT=true
ENABLE_STEALTH_LOGGER=true
ENABLE_HEALTH_CHECK=true

# Performance
TIMEOUT=30000
MAX_RETRIES=10

# Security
MASK_PHONE_NUMBERS=true

# Bot Sleep Behavior (Anti-Detection)
# Enable/disable sleep mode (default: true)
BOT_SLEEP_ENABLED=true
# Inactivity timeout before sleeping in milliseconds (default: 1800000 = 30 minutes)
BOT_SLEEP_TIMEOUT=1800000
# Busy hours when bot stays awake (24-hour format, IST timezone)
BOT_BUSY_HOURS_START=8
BOT_BUSY_HOURS_END=23
